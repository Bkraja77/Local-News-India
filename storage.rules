rules_version = '2';

// Firebase Storage Security Rules for Public Tak
service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. Profile Photos: Max 5MB, must be image, owner only can write
    match /profile-pics/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // 2. Post Thumbnails and Article Images: Max 10MB, must be image
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    match /post-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // 3. News Videos: Max 50MB, must be video type
    match /videos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
    }
    
    // 4. Video Thumbnails: Max 5MB
    match /video-thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // 5. User Drafts: Only the owner can read or write their own drafts
    match /users/{userId}/drafts/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 6. Default Fallback
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}